
@page "/pricing"

<PageTitle>Pricing Plans - MyShop</PageTitle>

<div class="hero-section text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">Choose Your Plan</h1>
        <p class="lead mb-4">Flexible pricing options designed to scale with your business</p>
        
        <div class="d-flex justify-content-center mb-4">
            <div class="btn-group" role="group">
                <input type="radio" class="btn-check" name="billing" id="monthly" checked>
                <label class="btn btn-outline-light" for="monthly">Monthly</label>
                
                <input type="radio" class="btn-check" name="billing" id="yearly">
                <label class="btn btn-outline-light" for="yearly">
                    Yearly <span class="badge bg-success ms-1">Save 20%</span>
                </label>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4 justify-content-center">
        <div class="col-lg-4 col-md-6">
            <div class="card pricing-card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold">Basic</h4>
                        <p class="text-muted">Perfect for small teams</p>
                        <div class="pricing-amount">
                            <span class="display-4 fw-bold text-primary">$29</span>
                            <span class="text-muted">/month</span>
                        </div>
                    </div>
                    
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Up to 5 users</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>10 GB storage</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Email support</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Basic analytics</li>
                        <li class="mb-2"><i class="fas fa-times text-muted me-2"></i>Advanced integrations</li>
                        <li class="mb-2"><i class="fas fa-times text-muted me-2"></i>Priority support</li>
                    </ul>
                    
                    <div class="d-grid">
                        <a href="/register?plan=basic" class="btn btn-outline-primary btn-lg">
                            Get Started
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6">
            <div class="card pricing-card featured h-100 border-0 shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold">Standard</h4>
                        <p class="text-muted">Most popular choice</p>
                        <div class="pricing-amount">
                            <span class="display-4 fw-bold text-primary">$79</span>
                            <span class="text-muted">/month</span>
                        </div>
                    </div>
                    
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Up to 25 users</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>100 GB storage</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Priority email support</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Advanced analytics</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>API access</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Custom integrations</li>
                    </ul>
                    
                    <div class="d-grid">
                        <a href="/register?plan=standard" class="btn btn-primary btn-lg">
                            Start Free Trial
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6">
            <div class="card pricing-card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold">Premium</h4>
                        <p class="text-muted">For large enterprises</p>
                        <div class="pricing-amount">
                            <span class="display-4 fw-bold text-primary">$199</span>
                            <span class="text-muted">/month</span>
                        </div>
                    </div>
                    
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited users</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>1 TB storage</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>24/7 phone support</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Enterprise analytics</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>White-label options</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Dedicated account manager</li>
                    </ul>
                    
                    <div class="d-grid">
                        <a href="/contact?plan=premium" class="btn btn-outline-primary btn-lg">
                            Contact Sales
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-5">
        <h3 class="fw-bold mb-4">Frequently Asked Questions</h3>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item border-0 shadow-sm mb-3">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                Can I change my plan later?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Yes, you can upgrade or downgrade your plan at any time. Changes will be reflected in your next billing cycle.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item border-0 shadow-sm mb-3">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                Is there a free trial available?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Yes, we offer a 14-day free trial for all plans. No credit card required to start.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item border-0 shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                What payment methods do you accept?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                We accept all major credit cards, PayPal, and bank transfers for enterprise plans.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
